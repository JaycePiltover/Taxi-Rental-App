<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1"> <!-- mobile device -->
		<title>Welcome to Elite Tour & Travels</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 					crossorigin="anonymous">	
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/landing.css">
		<link href="https://fonts.googleapis.com/css?family=Lato:400,700&display=swap" rel="stylesheet">
	</head>
	
	<body>
	
		<nav class="navbar navbar-expand-md navbar-dark bg-dark" id="new_nav">
			<div class="container">
				<a class="navbar-brand" href="/">Elite Tour & Travels</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle 					navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						  <li class="nav-item">
							<a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
						  </li>
						  <li class="nav-item">
							<a class="nav-link" href="/about">About</a>
						  </li>
						  <li class="nav-item">
							<a class="nav-link" href="/contactUs">Contact Us</a>
						  </li>
					</ul>
					<ul class="navbar-nav navbar-right">
						<% if(!currentUser){ %>
							<li id="signup" class="nav-item"><a href="/signUp" id="signup1" class="nav-link"><i class="fa fa-user-plus" aria-hidden="true" id="signup2"></i> SignUp</a></li>
							<li class="nav-item"><a class="nav-link" href="/login"><i class="fa fa-user"></i> Login</a></li>
						<% }else{ %>
							<li class="nav-item"><a href="/dashboard" class="nav-link"> Signed In as <%= currentUser.name %></a></li>
							<li class="nav-item"><a href="/logout" class="nav-link"><i class="fa fa-user"></i> Logout </a></li>
						<% } %>
					 </ul>
		  		</div>
			</div>
		</nav>

	
	<div class="container" id="alrt">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert" id="alrt1">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert" id="alrt2">
                <%= success %>
            </div>
        <% } %>
    </div>