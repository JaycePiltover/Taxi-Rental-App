<%- include("../partials/header") %>

<div class="auth_head">
	<h1>
		Cancel Booking
	</h1>
</div>


<div class="container col-md-3 col-11" id="log_div">
		<form action="/dashboard/cancel/<%= record.B_id %>?_method=PUT" method="Post">
			<div class="form-group">
				<label class="text-dark">PickUp Address</label>
				<input type="text" name="email" class="form-control" value="<%= record.pickup %>" readonly>
			</div>
			<div class="form-group">
				<label class="text-dark">Drop Address</label>
				<input type="text" name="email" class="form-control" value="<%= record.drop %>" readonly>
			</div>
			<div class="form-group">
				<label class="text-dark">PickUp Date & Time</label>
				<input type="text" class="form-control" value="<%= record.Assgn_date.getDate()+"-"+(record.Assgn_date.getMonth()+1)+"-"+record.Assgn_date.getFullYear() %>  || <%= record.Assgn_time %>" readonly>
			</div>
			<div>
				<button type="submit" class="btn text-white" id="cancel_but">Cancel</button>
			</div>
		</form>
</div>

<%- include("../partials/footer") %>