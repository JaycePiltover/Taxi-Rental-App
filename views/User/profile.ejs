<%- include("../partials/header") %>

<div class="container" id="dash_jumbo">
	<div class="row">
		<% if(currentUser.role == "user"){ %>
		<div class="col-md-2 col-sm-4">
			<div class="list-group" id="list-tab" role="tablist">
				<a class="list-group-item list-group-item-action bg-dark text-white" id="list-list" href="/dashboard">Dashboard</a>
				<a class="list-group-item list-group-item-action" id="list-list" href="/forgot">Reset Password</a>
			</div>
		</div>
		<% } %>
		<% if(currentUser.role == "admin"){ %>
		<div class="col-md-2 col-sm-4">
			<div class="list-group" id="list-tab" role="tablist">
				<a class="list-group-item list-group-item-action bg-dark text-white" id="list-list" href="/dashboard">Dashboard</a>
				<a class="list-group-item list-group-item-action" id="list-list" href="/forgot">Reset Password</a>

			</div>
		</div>
		<% } %>
		<div class="container col-md-10 col-sm-8 col-11" id="con_div">
			<form action="/dashboard/profile?_method=PUT" method="post">
				<div class="form-group">
					<label class="text-dark">Name</label>
					<input type="text" name="name" class="form-control" value="<%= currentUser.name %>" readonly>
				</div>
				<div class="form-group">
					<label class="text-dark">Email Address</label>
					<input type="email" name="email" class="form-control" value="<%= currentUser.email %>" readonly>
				</div>
				<div class="form-group">
					<label class="text-dark">Mobile Number</label>
					<input type="text" name="mobile" class="form-control" value="<%= currentUser.mobile %>">
				</div>
				<button type="submit" class="btn btn-secondary bg-dark">Save Changes</button>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>