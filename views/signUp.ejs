<%- include("partials/header") %>

<div class="auth_head">
	<h1>
		Sign-Up
	</h1>
</div>


<div class="container col-md-3 col-11" id="log_div">
		<form action="/signUp" method="Post">
			<div class="form-group">
				<label class="text-dark">Full Name <font color="red">*</font> :</label>
				<input type="text" name="name" class="form-control" placeholder="Enter your Full Name" autofocus>
			</div>
			<div class="form-group">
				<label class="text-dark">Email Address <font color="red">*</font> :</label>
				<input type="email" name="email" class="form-control" placeholder="Enter your Email Address">
			</div>
			<div class="form-group">
				<label class="text-dark">Mobile Number <font color="red">*</font> :</label>
				<input type="text" name="mobile" class="form-control" placeholder="Enter your 10 digit Mobile Number">
			</div>
			<div class="form-group">
				<label class="text-dark">Set Password <font color="red">*</font> : (<i>Password must be of 5-15 characters.It must contain atleast 1 numeric, 1 special character and 1 capital letter.</i>)</label>
				<input class="form-control" type="password" name="password" placeholder="Set password">
			</div>
			<div class="form-group">
				<label class="text-dark">Re-enter Password <font color="red">*</font> :</label>
				<input class="form-control" type="password" name="confpassword" placeholder="Re-Enter password">
			</div>
			<div>
				<button type="submit" class="btn" id="log_but">Sign Up</button>
			</div>
			<label class="text-dark">Already have an account? </label>
			<a href="/logIn">Sign-In</a>
		</form>
</div>

<%- include("partials/footer") %>